<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding3"
    android:background="#FFF9E3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/on3" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="450dp"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="     Embark on Your Adventure"
            android:textColor="@color/accentColor"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle=""
            android:layout_marginStart="30dp"
            android:textColor="@color/accentColor"
            android:layout_marginTop="20dp"
            android:text="         You're ready to explore! \nStart your journey in a new places. \nTap below to begin your adventure. \nIf you need assistance, our team is \nalways here to help. Enjoy your travels!" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getStarted"
            style="@android:style/Widget.Button"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="114dp"
            android:background="@drawable/button"
            android:text="Get Started"
            android:textColor="@color/primaryColor"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
