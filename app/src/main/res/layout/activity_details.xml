<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E3"
    tools:context=".Sigiriya">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="39dp"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/tvLocationDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sigiriya Location Details"
        android:textColor="@color/accentColor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView6"
        android:layout_marginStart="97dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvLocationAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Sigiriya, Sri Lanka"
        android:textColor="@color/accentColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="140dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocationDetailsTitle"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvHistoricalSignificance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historical Significance: A UNESCO World Heritage site, known for its ancient rock fortress."
        android:textColor="@color/accentColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLocationAddress"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvAdditionalInformationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Information:"
        android:textColor="@color/accentColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHistoricalSignificance"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvAdditionalInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sigiriya, also known as Lion's Rock, is famous for its frescoes, water gardens, and its remarkable architectural design. It's a popular tourist destination offering breathtaking views and a glimpse into ancient Sri Lankan civilization."
        android:textColor="@color/accentColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAdditionalInformationLabel"
        android:layout_marginTop="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/visitButton"
        style="@android:style/Widget.Button"
        android:layout_width="135dp"
        android:layout_height="57dp"
        android:layout_gravity="end"
        android:background="@drawable/button"
        android:text="Visit"
        android:textColor="@color/primaryColor"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAdditionalInformation"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="138dp" />

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accentColor"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/baseline_home_24"
            android:tint="@color/primaryColor" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Profile"
            android:src="@drawable/baseline_person_24"
            android:tint="@color/primaryColor" />

        <ImageView
            android:id="@+id/ivSupport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Support"
            android:src="@drawable/baseline_contact_support_24"
            android:tint="@color/primaryColor" />

        <ImageView
            android:id="@+id/ivCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Cart"
            android:src="@drawable/baseline_shopping_cart_24"
            android:tint="@color/primaryColor" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
