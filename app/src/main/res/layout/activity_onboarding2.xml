<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding2"
    android:background="#FFF9E3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/on2" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="450dp"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="    Explore Top Destinations"
            android:textColor="@color/accentColor"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle=""
            android:layout_marginStart="30dp"
            android:textColor="@color/accentColor"
            android:layout_marginTop="20dp"
            android:text="  Discover breathtaking destinations \n      and find your next adventure. \n  From hidden gems to popular spots, \n        weâ€™ve curated the best places \n      to enrich your travel experience." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next2btn"
            style="@android:style/Widget.Button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="150dp"
            android:background="@drawable/button"
            android:text="Next"
            android:textColor="@color/primaryColor"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
